<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardActivity"
    android:background="@color/lightgreen">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/border">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcome_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Hi, [Name]! Small steps today, big achievements tomorrow!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/green" />

            <!-- Quick Stats -->
            <LinearLayout
                android:id="@+id/quick_stats_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/welcome_tv"
                android:layout_marginTop="20dp">

                <!-- Last Workout -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Workout:"
                        android:textColor="@color/green"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/last_workout_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No recent workouts"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Calories Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories Today:"
                        android:textColor="@color/green"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/calories_today_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Graph Placeholder -->
            <ImageView
                android:id="@+id/graph_placeholder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/quick_stats_layout"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_nutrition"
                android:background="@color/lightgreen" />

            <!-- Quick Actions -->
            <LinearLayout
                android:id="@+id/quick_actions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/graph_placeholder"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/start_workout_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Workout"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/log_meal_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Log Meal"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Progress Section - Placeholder for deciding what to display in this recycler view -->
            <TextView
                android:id="@+id/progress_section_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/quick_actions_layout"
                android:layout_marginTop="20dp"
                android:text="Your Progress"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/green" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/progress_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress_section_tv"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav"
        app:labelVisibilityMode="labeled"
        android:background="@color/lightgreen" />
</RelativeLayout>